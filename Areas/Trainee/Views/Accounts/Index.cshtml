@model IEnumerable<Asm.Models.Entities.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Trainee/Views/Shared/_MyLayout.cshtml";
}

<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->

            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
            </div><br>

        </div><!--/col-3-->
        <div class="col-sm-9">

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="last_name"><h4>Name</h4></label>
                            @foreach (var item in Model)
                            {
                                <input type="text" class="form-control" value="@item.Name" readonly style="cursor:pointer">
                            }
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="last_name"><h4>Email</h4></label>
                            @foreach (var item in Model)
                            {
                                <input type="text" class="form-control" value="@item.Email" readonly style="cursor:pointer">
                            }
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="phone"><h4>Phone</h4></label>
                            @foreach (var item in Model)
                            {
                                <input type="text" class="form-control" value="@item.PhoneNo" readonly style="cursor:pointer">
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="mobile"><h4>DoB</h4></label>
                            @foreach (var item in Model)
                            {
                                <input type="text" class="form-control" value="@item.DoB" readonly style="cursor:pointer">
                            }
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-xs-6">
                            <label for="email"><h4>Toeic Score</h4></label>
                            @foreach (var item in Model)
                            {
                                <input type="text" class="form-control" value="@item.ToeicScore" readonly style="cursor:pointer">
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <br>
                            @foreach (var item in Model)
                            {
                                <button type="button" class="btn btn-warning"><a href="@Url.Action("Edit", "Accounts", new { id = item.AccID })" style="color:white">Edit</a></button>
                                <button type="button" class="btn btn-primary"><a href="@Url.Action("ChangePassword", "Accounts", new { id = item.AccID })" style="color:white">Change Password</a></button>
                            }
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            alert(@Html.Raw(Json.Encode(TempData["Message"])));
    </script>
}
